{{#if editComment}}
    <form>
        <div class="form-group">
            <label for="content">Answer</label>
            {{textarea rows="8" cols="50" class="form-control" id="content" value=content placeholder=comment.content}}
        </div>

        <div class="form-group">
            <label for="author">Your name</label>
            {{input value=author class="form-control" id="author" placeholder=comment.author}}
        </div>

        <div class="form-group">
            <label for="role">Your job / background</label>
            {{input value=role class="form-control" id="role" placeholder=comment.role}}
        </div>            

        <button {{action 'updateComment' comment}} class="btn btn-warning">Edit Answer</button>
        <button {{action "deleteComment" comment}} class="btn btn-danger">Delete Answer</button>
    </form>
{{else}}
    <p {{action 'editCommentFormShow'}} class="author red-link">Edit Answer</p>
{{/if}}

  
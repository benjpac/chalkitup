<div class="well">
    {{#if addNewComment}}
    <form>
        <div class="form-group">
            <label for="content">Answer</label>
            {{textarea rows="8" cols="50" class="form-control" id="content" value=detail placeholder="Answer the question here"}}
        </div>

        <div class="form-group">
            <label for="author">Your name</label>
            {{input value=author class="form-control" id="author" placeholder="John Smith"}}
        </div>

        <button {{action 'saveComment1'}} class="btn btn-success">Answer Question</button>
    </form>
    {{else}}
    <button {{action 'postFormShow'}} class="btn btn-success">Answer Question</button>
    {{/if}}
</div>

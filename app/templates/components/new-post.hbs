{{#if addNewPost}}
  <h2>What's your question?</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Your name</label>
        {{input value=author class="form-control" id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content class="form-control" id="content"}}
      </div>

      <button {{action 'savePost1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'postFormShow'}} class="btn btn-default">New Question</button>
{{/if}}
<div class="well">
    {{#if addNewComment}}
        <form>
            <div class="form-group">
                <label for="content">Answer</label>
                {{textarea rows="8" cols="50" class="form-control" id="content" value=content placeholder="Answer the question here"}}
            </div>

            <div class="form-group">
                <label for="author">Your name</label>
                {{input value=author class="form-control" id="author" placeholder="John Smith"}}
            </div>

            <div class="form-group">
                <label for="role">Your job / background</label>
                {{input value=role class="form-control" id="role" placeholder="Web Developer"}}
            </div>            

            <button {{action 'saveComment'}} class="btn btn-success">Answer Question</button>
        </form>
    {{else}}
        <button {{action 'postFormShow' post}} class="btn btn-success">Answer Question</button>
        {{edit-comment post=post updateAnswer="updateAnswer"}}
    {{/if}}
</div>
